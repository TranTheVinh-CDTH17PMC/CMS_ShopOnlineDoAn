
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ACE_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Nhập hàng</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="./">Trang chủ</a></li>
        <li class="breadcrumb-item">Quản lý</li>
        <li class="breadcrumb-item active" aria-current="page">Nhập hàng</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div class="col-md-8">
                    <div class="order-search" style="margin: 10px 0px; position: relative;">
                        <input type="text" class="form-control ui-autocomplete-input" onkeyup="filterFunction()" placeholder="Nhập mã phiếu..." id="search-pro-box" autocomplete="off">
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>Mã phiếu</th>
                            <th>Ngày nhập</th>
                            <th>Người nhập</th>
                            <th>Nhà cung cấp</th>
                            <th>Tổng tiền</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody id="myproducts">
                        <tr>
                            <td><a href="#">1</a></td>
                            <td>30/5/2020</td>
                            <td>Thoại</td>
                            <td>Vinh</td>
                            <td>50000</td>
                            <td>Không</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
<!--Row-->
</div>
<script>
    function filterFunction() {
        var input, filter, ul, li, tr, i;
        input = document.getElementById("search-pro-box");
        filter = input.value.toUpperCase();
        div = document.getElementById("myproducts");
        tr = div.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            txtValue = tr[i].textContent || tr[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";

            } else {
                tr[i].style.display = "none";
            }
        }
    }
</script>


