@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ACE_Layout.cshtml";
}
@helper CheckDate(DateTime date)
{
    @date.Date.ToString("dd/MM/yyyy")
}
@helper Delete(bool? Status)
{
if (Status == false)
{
        <span class="badge badge-primary">Hoạt động</span>
}
}
@helper ButtonEdit(int Id)
{
    <a href="@Url.Action("Edit","InOrder",new { @Id = Id })">
        <button class="btn btn-primary" title="Chỉnh sửa" style="margin-left:-19px;margin-right:3px;" type="button"><i class="fas fa-pencil-alt"></i></button>
    </a>
}
@helper ButtonDetails(int Id)
{
    <a href="@Url.Action("Details","InOrder",new { @Id = Id })">
        <button class="btn btn-success" title="Chi tiết" style="margin-right:3px;" type="button"><i class="fa fa-eye" aria-hidden="true"></i></button>
    </a>
}

@helper ButtonDelete(int Id)
{
    <button class="btn btn-warning" title="Ngừng kinh doanh" name="IdDelete" type="submit" value="@Id" onclick="return ConfirmDelete()"> <i class="fas fa-trash-alt"></i></button>
}

@helper Ma(int Id)
{
    <span>SP @Id</span>
}

