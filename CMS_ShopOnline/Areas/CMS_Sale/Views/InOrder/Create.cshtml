
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/ACE_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Tạo mới phiếu nhập</h6>
                </div>
                <div class="card-body" style="margin-top:-13px">
                    <div class="form-group">
                        <label>Tên nguyên liệu</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Nhà cung cấp</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Người nhập</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <!-- General Element -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="form-group">
                        <label>Số lượng</label>
                        <input type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Đơn giá</label>
                        <input type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <input type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <textarea  class="form-control" rows="1" style="border-radius:0"></textarea>
                    </div>
                    <button class="btn btn-mini btn-primary" type="submit" name="Submit">
                        <i class="ace-icon fa fa-save"></i> Lưu
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

