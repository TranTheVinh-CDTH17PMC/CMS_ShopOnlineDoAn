@model CMS_ShopOnline.Areas.CMS_Sale.Models.NguyenLieuViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/ACE_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="container-fluid" id="container-wrapper">
        <div class="row">
            <div class="col-lg-6">
                <!-- Form Basic -->
                <div class="card mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Tạo mới nguyên liệu</h6>
                    </div>
                    <div class="card-body" style="margin-top:-13px">
                        <div class="form-group">
                            <label>Tên Nguyên Liệu</label>
                            @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Chọn Hình Ảnh Mô Tả</label>
                            @Html.EditorFor(model => model.FileImage, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                        </div>
                        <div class="form-group">
                            <label>Đơn Giá</label>
                            @Html.TextBoxFor(model => model.DonGia, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- General Element -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Phân loại</label>

                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Đơn Vị Tính</label>
                            
                        </div>
                        <button class="btn btn-mini btn-primary" type="submit" name="Submit">
                            <i class="ace-icon fa fa-save"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

