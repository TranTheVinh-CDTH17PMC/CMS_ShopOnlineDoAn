    function openpoupmy(value) {
        debugger
        var sd = $("#StartDate").val();
        var ed = $("#EndDate").val();
        newwindow = window.open('/CMS_Sale/SaleReport/ExportToExcel?name=spbanchay&StartDate=' + sd + '&EndDate=' + ed + '&ExportExcel=' + value + '', 'print', 'height=500,width=500');

                setTimeout(function () {
                }, 500);
            }

</script>